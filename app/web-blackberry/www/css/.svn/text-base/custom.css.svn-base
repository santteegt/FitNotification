.barra {
	text-align: center;	
	margin-left: auto;
	margin-right: auto;        
	}

.status{
    height: 20px;
    font-size: 12px;    
}

.barra span{
    vertical-align: middle;
}

.status span{
    vertical-align: middle;            
}

.barra img{
    vertical-align: middle;
}

#titulo{
    font-size: 25px;
    font-family: sans-serif;
    font-weight: bold;    
}

.auth-count{
    display: block;
    float: left;
}

.count-item{
    float: right;
    padding: .1em .4em;
}

.footer-bottom{
    position: absolute;    
    bottom: 0;
}

.widget-error{
    border: 2px solid #FF0000;
}

.widget-ok{
    border: 1px solid #111;
}

.status-bar-ok{    
    background-image: -webkit-linear-gradient(#3c3c3c,#111);
    border: 1px solid #111;    
}

.status-bar-error{    
    background-image: -webkit-linear-gradient(#FF0000,#ab2f2f);
    border: 1px solid #ab2f2f;
}

/** Stack & messages **/
#message {
    font-size: 10px;
}

#stack {
    font-size: 0.8em;
    overflow: auto;
}

#errorm {     
    margin: 30% 5% 30% 5%; 
}

.fitpage{
    background: #eaeaea url('images/bantec-logo.png') no-repeat;
    background-position: right 85%;    
}

.spinning
{
    display:none;
    width:device-width;
    height:100%;
    background: white url('images/loading.gif') no-repeat;
    background-position: center;
    opacity:0.4;
    filter:alpha(opacity=40);
}
/**---------------------------------**/


/** Para informacion de la autorizacion **/
table {
    border: 0;
    font-size: 12px;
}

th {
    background-color: black;
    color: white;
    text-shadow: 0 -1px 1px black;
}

td {
    text-align: left;
    width: 20%;
}

#field{    
    text-align: center;
}

#label{    
    font-weight: bold;    
}
/**---------------------------------**/

#welcomec {
        background: black url('images/fit-welcome.png') no-repeat;
        background-position: center;
        min-height: 588px;
    }

@media screen and (max-height:320px){
    #welcomec {
        background: black url('images/fit-welcome.png') no-repeat;
        background-position: center;
        min-height: 168px;
    }
}

@media screen and (max-height:460px){
#welcomec {
        background: black url('images/fit-welcome.png') no-repeat;
        background-position: center;
        min-height: 398px;
    }
}


/* Para lista de autorizaciones */
.ui-li-heading {
    font-size: 12px;
}

.ui-li-desc {
    font-size: 10px;
}

@media screen and (max-height:460px){
    .ui-li-heading {
        font-size: 9px;
    }

    .ui-li-desc {
        font-size: 8px;
    }
}
/**---------------------------------**/

#popup-qtip{    
    background-image: none;
    background: black;
    border: 0;
    bottom: 30px;
    display: block;
    text-align: center;
}

.ui-tooltip-titlebar{
    font-size: 14px;
    padding: 5px 10px 5px 10px;
}

.ui-tooltip-content{
    font-size: 14px;  
}


/* Add some nice box-shadow-ness to the dialogues */
.ui-tooltip-dialogue{
	max-width: 420px;
	min-width: 210px;
 
	-moz-box-shadow: 0 0 10px 1px rgba(0,0,0,.5);
	-webkit-box-shadow: 0 0 10px 1px rgba(0,0,0,.5);
	box-shadow: 0 0 10px 1px rgba(0,0,0,.5);
}
 
.ui-tooltip-dialogue .ui-tooltip-content{
	padding: 10px;
}
 
.ui-tooltip-dialogue button{
	float: left;
	width: 47%;
	margin-right: 10px;
	padding: 3px 0;
 
	text-align: center;
	font-size: 10.5px;
}
 
.ui-tooltip-dialogue button + button{
	float: right;
	margin-right: 0;
}
 
.ui-tooltip-dialogue input{
	width: 95%;
	padding: 3px 0 3px 5px;
	margin-bottom: 7px;
 
	font-size: 10.5px;
}
 
.ui-tooltip-dialogue button.full{
	float: none;
	width: 100%;
}

